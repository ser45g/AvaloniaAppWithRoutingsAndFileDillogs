<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:TestRoutingProject.ViewModels"
xmlns:view="using:TestRoutingProject.Views"
x:Class="TestRoutingProject.Views.ChartsWindow"  WindowStartupLocation="CenterOwner"
        Width="300" Height="400" 
        Title="Графики">

<Grid RowDefinitions="Auto,*">
		<Grid  Grid.Row="0"  >

			<TextBlock Padding="10" Text="{Binding Title,RelativeSource={RelativeSource FindAncestor,AncestorType=Window}}">
				<TextBlock.IsVisible>
					<OnPlatform Default="False">
						<On Content="True" Options="Windows" />
					</OnPlatform>
				</TextBlock.IsVisible>
			</TextBlock>
		</Grid>
<ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" Grid.Row="1">
		
		 <view:ChartsView  />
</ScrollViewer>
	</Grid>
 
</Window>
